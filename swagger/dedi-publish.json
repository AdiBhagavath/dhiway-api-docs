  "paths": {
    "/dedi/{namespace}/add-registry": {
      "post": {
        "tags": [
          "Publish"
        ],
        "summary": "Create a new registry",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "registry_name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "schema": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  },
                  "query_allowed": {
                    "type": "boolean"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "created"
              }
            }
          }
        }
      }
    },
    "/dedi/{namespace}/{registry_name}/add-record": {
      "post": {
        "tags": [
          "Publish"
        ],
        "summary": "Add a new record to a registry",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "registry_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "record_name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "details": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "created"
              }
            }
          }
        }
      }
    },
    "/dedi/{namespace}/{registry_name}/{record_name}/update-record": {
      "post": {
        "tags": [
          "Update"
        ],
        "summary": "Update an existing record in a registry",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "registry_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "record_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": false,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "description": {
                    "type": "string"
                  },
                  "details": {
                    "type": "object",
                    "additionalProperties": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Updated",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "updated"
              }
            }
          }
        }
      }
    },
    "/dedi/{namespace}/{registry_name}/{record_name}/revoke-record": {
      "post": {
        "tags": [
          "State management"
        ],
        "summary": "Revoke a record",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "registry_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "record_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Record revoked",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "Record revoked"
              }
            }
          }
        }
      }
    },
    "/dedi/{namespace}/{registry_name}/{record_name}/reinstate-record": {
      "post": {
        "tags": [
          "State management"
        ],
        "summary": "Reinstate a record",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "registry_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "record_name",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Record reinstated",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "Record reinstated"
              }
            }
          }
        }
      }
    },
    "/dedi/{namespace}/bulk-upload": {
      "post": {
        "tags": [
          "Publish"
        ],
        "summary": "Create a registry and Bulk upload records to the registry",
        "parameters": [
          {
            "name": "namespace",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "registry_details": {
                    "type": "object",
                    "properties": {
                      "registry_name": {
                        "type": "string"
                      },
                      "description": {
                        "type": "string"
                      },
                      "schema": {
                        "type": "object",
                        "additionalProperties": {
                          "type": "string"
                        }
                      }
                    }
                  },
                  "data": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "record_name": {
                          "type": "string"
                        },
                        "details": {
                          "type": "object",
                          "additionalProperties": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Bulk upload successful",
            "content": {
              "text/plain": {
                "schema": {
                  "type": "string"
                },
                "example": "Bulk upload completed successfully"
              }
            }
          }
        }
      }
    }
  }
}